<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigmaSafety.Tabela2"
             xmlns:local="clr-namespace:SigmaSafety"
             BackgroundColor="#303030" NavigationPage.HasNavigationBar="False">

    <Grid HorizontalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <StackLayout Orientation="Horizontal" Grid.Column="1">
            <Label Text="NBR ISO 13857 - Tabela 4" TextColor="LightGray" VerticalTextAlignment="Center" HorizontalOptions="CenterAndExpand" Margin="85,0,0,0"/>
            <Image Source="icoSigma.png" HorizontalOptions="End" HeightRequest="80"/>
        </StackLayout>

        <Image Source="Tab4.png" Grid.Column="1" Grid.Row="1"/>
    </Grid>

</ContentPage>